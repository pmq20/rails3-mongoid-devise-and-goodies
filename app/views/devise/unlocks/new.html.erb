<h2>重新发送账号解锁邮件</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email,'E-mail' %><br />
  <%= f.email_field :email %></div>

  <div><%= f.submit "重新发送账号解锁邮件" %></div>
<% end %>

